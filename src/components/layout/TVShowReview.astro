---
import Layout from '@layouts/Default.astro';
import TVShowDetails from '@components/tv/TVShowDetails.astro';

const { content } = Astro.props;
const { title, description, tvId } = content;

const ogImage = new URL(`/v1/generate/og/${Astro.params.slug}.png`, Astro.url);
---

<Layout
  title={title}
  description={description}
  ogImage={ogImage}
  showRecent={true}

>
  <main class='w-full'>
    <!-- TV Show Details Component -->
    <TVShowDetails tvId={tvId} />
    
    <!-- Review Content -->
    <div class="max-w-7xl mx-auto px-4 py-8 prose prose-lg">
      <slot />
    </div>
  </main>
</Layout> 