---
import { getCollection } from 'astro:content';
import Layout from '@layouts/Default.astro';
import BlogList from '@components/blog/BlogList.astro';

// const posts = await getCollection('blog').then((collection) =>
//   // collection.reverse()
//   collection
// );
const posts = await getCollection('blog').then((collection) =>
  collection.sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime())
);
---

<Layout
  title='Blog'
  description='MemoryView Blog | On this page you can find a collection of blogposts'
  pageTitle='MemoryView Blog'
>
  <main class='bg-green p-6'>
    <BlogList posts={posts} />
  </main>
</Layout>
